
<table class="table table-hover table-inverse">
  <% if @range == '2' %>
  <h2>Books search for "<%= @word %>"</h2>
  <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @book.each do |book| %>
   <tr>
     <td>
        <%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
       <span><%= book.title %></span>
       <% end %>
      </td>
      <td>
        <%= book.body %>
      </td>
     </tr>
  <% end %>
  </tbody>
  <% else %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <h2>Users search for "<%= @word %>"</h2>
    <% @user.each do |user| %>
     <tr>
      <td>
        <%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "Show", user_path(user) %>
      </td>
     </tr>
    <% end %>
  </tbody>
  <% end %>
</tbody>
</table>