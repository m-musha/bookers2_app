<main>
<p><% @user.errors.full_messages.each do |message| %>
  <div class="form-error">
     <%= message %>
  </div>
<% end %>
</p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   
<h2>User info</h2>
<form>
<%= form_with model:@user, local:true do |f| %>

<div class="form-group">
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, class: "form-control name" %></p>
</div>

<div class="form-group">
  <label for="profile_image">Image</label>
  <p><%= f.attachment_field :profile_image %></p>
</div>

<div class="form-group">
  <label for="introduction">introduction</label>
  <p><%= f.text_area :introduction, class: "form-control name" %></p>
</div>
  
  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>
</form>
</div>
</div>
</div>
</main>