<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3 class="text-danger"><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li class="text-danger"><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <h2>User info</h2>
    <%= form_with model:@user, local: true do |f| %>

    <div class="form-group">
      <label for="inputName">Name</label>
      <p><%= f.text_field :name, class: "form-control name" %></p>
    </div>

    <div class="form-group">
      <label for="profile_image">Image</label>
      <p><%= f.attachment_field :profile_image %></p>
    </div>

    <div class="form-group">
      <label for="introduction">introduction</label>
      <p><%= f.text_area :introduction, class: "form-control name" %></p>
    </div>

      <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>

    <div class="mt-2">
      <%= link_to "退会", user_path(current_user.id), method: :delete, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger" %>
    </div>
    </div>
  </div>
</div>
