<main>
<p class="text-success"><%= flash[:notice] %></p>
<%= render 'books/error', book: @book %>

<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">

<%= render 'users/info', user: @user %>

<h2 class="mt-3">New book</h2>
<%= render 'books/new', book: @newbook %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
<tbody>
<tr>
<td>
<%= link_to user_path(@book.user.id) do %>
<%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %><br>
<%= @book.user.name %>
<% end %>
</td>
<td><%= link_to @book.title,book_path(@book) %></td>
<td><%= @book.body %></td>


<% if @book.user_id == current_user.id %>
<td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
<td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %></td>
<% end %>
</tr>
</tbody>
</table>
</div>
</div>
</div>
</main>